<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/logo_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/rv_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/ironsource_button_shape"
            android:padding="5dp"
            android:text="initializing rewarded video" />


        <Button
            android:id="@+id/is_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_button"
            android:layout_alignLeft="@+id/rv_button"
            android:layout_alignStart="@+id/rv_button"
            android:layout_alignRight="@+id/rv_button"
            android:layout_alignEnd="@+id/rv_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/ironsource_button_shape"
            android:text="Show Interstitial" />

    </RelativeLayout>


</RelativeLayout>
